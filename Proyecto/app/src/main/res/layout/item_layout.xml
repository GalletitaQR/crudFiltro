<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground"
    android:layout_marginBottom="8dp">

    <!-- ID del empleado -->
<TextView
android:id="@+id/textViewId"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="ID: 12345"
android:textSize="14sp"
android:textColor="#888888" /> <!-- Color gris para ID -->

    <!-- Nombre del empleado -->
<TextView
android:id="@+id/textViewName"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Juan Pérez"
android:textSize="18sp"
android:textColor="#000000" /> <!-- Color negro para el nombre -->

    <!-- Correo electrónico del empleado -->
<TextView
android:id="@+id/textViewEmail"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="juan@email.com"
android:textSize="16sp"
android:textColor="#0000FF" /> <!-- Color azul para el correo -->

    </LinearLayout>
